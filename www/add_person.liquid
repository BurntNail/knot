{% include "partials/header.liquid" %}

<form method="POST">
  <h2>Add Person</h2>

  <div class="mb-3">
    <label for="person_name" class="form-label">Name</label>
    <input
      type="text"
      class="form-control"
      name="person_name"
      id="person_name"
      placeholder="Jack M">
  </div>
  <div class="mb-3">
    <div class="form-check">
      <input
        class="form-check-input"
        type="radio"
        name="is_prefect"
        id="is_not"
        value="false"
        checked>
      <label class="form-check-label" for="is_not">
        Is not a prefect.
      </label>
    </div>
    <div class="form-check">
      <input
        class="form-check-input"
        type="radio"
        name="is_prefect"
        id="is"
        value="true">
      <label class="form-check-label" for="is">
        Is a prefect.
      </label>
    </div>
  </div>


  <button type="submit" class="btn btn-primary">Add person.</button>
</form>


