{% include "partials/header.liquid" %}

<form method="POST" action="/add_prefect">
  <h2>Add Prefects to Event</h2>

  <div class="mb-3">
    <label for="event_id" class="form-label">Event Name:</label>
    <select class="form-select" name="event_id">
      {% for event in events %}
        <option value="{{event.id}}">{{ event.event_name }}</option>
      {% endfor %}
    </select>
  </div>

  <div class="mb-3">
    <label for="prefects" class="form-label">Prefects:</label>
    {% for prefect in prefects %}
      <div class="form-check">
        <input
          class="form-check-input"
          type="checkbox"
          value="{{prefect.id}}"
          name="prefects">
        <label class="form-check-label" for="prefects">
          {{ prefect.person_name }}
        </label>
      </div>
    {% endfor %}
  </div>

  <button type="submit" class="btn btn-primary">Add prefects to event.</button>
</form>

<br><br><br>

